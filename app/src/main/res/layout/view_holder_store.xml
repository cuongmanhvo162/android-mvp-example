<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_holder_store_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/view_holder_store_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_holder_store_title"
            style="@style/TextStyle_16SP_Bold_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="text" />

        <TextView
            android:id="@+id/view_holder_store_description"
            style="@style/TextStyle_16SP_Normal_Dark_Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:text="text" />
    </LinearLayout>
</RelativeLayout>